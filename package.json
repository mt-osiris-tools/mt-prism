{
  "name": "mt-prism",
  "version": "0.1.0",
  "description": "MT-PRISM: Multi-provider AI automation for PRD-to-TDD workflows (Claude, GPT-4, Gemini)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "prism": "dist/cli.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:prd": "tsx scripts/test-prd-analyzer.ts",
    "start": "node dist/cli.js",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "PRD",
    "TDD",
    "requirements-analysis",
    "ai-agents",
    "llm",
    "claude",
    "gpt-4",
    "gemini",
    "multi-provider",
    "mcp",
    "automation",
    "figma",
    "confluence"
  ],
  "author": "MT-PRISM Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.70.1",
    "@google/generative-ai": "^0.24.1",
    "@types/node-fetch": "^2.6.11",
    "dotenv": "^17.2.3",
    "node-fetch": "^2.7.0",
    "openai": "^6.9.1",
    "proper-lockfile": "^4.1.2",
    "yaml": "^2.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/proper-lockfile": "^4.1.4",
    "@vitest/coverage-v8": "^4.0.12",
    "bats": "^1.13.0",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  }
}
